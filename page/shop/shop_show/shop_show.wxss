/* page/shop/shop_show/shop_show.wxss */

page{background: #f5f5f5;}

swiper {height: 500rpx;}
swiper-item image{display: block;width: 100%;height: 100%;}

.tit{width: 100%;height: 120rpx;line-height: 120rpx;box-sizing: border-box;padding: 0 20rpx;font-size: 32rpx;background: #fff}
.mess{width: 100%;height: 90rpx;line-height: 90rpx;box-sizing: border-box;padding: 0 20rpx;font-size:26rpx;background: #fff;margin-top: 10rpx;}
.con{background: #fff;box-sizing: border-box;padding: 20rpx;}
.foot{background: #fff;width: 100%;height: 100rpx;line-height: 100rpx;box-sizing: border-box;padding-left: 30rpx;font-size: 28rpx;color: #FBBA22;position: fixed;left: 0;bottom: 0;z-index: 99;}
.foot image{width: 40rpx;height:40rpx;margin-right: 10rpx;vertical-align: middle;}
.foot .foot_btn{position: absolute;right: 0;top: 0;height: 100rpx;line-height: 100rpx;width: 280rpx;text-align: center;font-size: 28rpx;color: #fff;background: #FBBA22}


