/* page/buy/buy.wxss */

page{background: #f5f5f5;}

.box{background: #fff;margin-top: 30rpx;padding: 0 30rpx;}
.info{font-size: 28rpx;border-bottom: 1px solid #eee;position: relative;height: 80rpx;line-height: 80rpx;}
.info text{margin-left: 20rpx;}
.info image{position: absolute;right: 0;top: 20rpx;display: block;width:40rpx;height: 40rpx;}
.address{padding: 20rpx 0 20rpx 60rpx;position: relative;font-size: 30rpx;min-height: 50rpx;}
.address image{position: absolute;left: 0;top: 20rpx;height:50rpx;width: 40rpx;}

.shop{box-sizing: border-box;padding: 30rpx;background: #fff;margin-top: 30rpx;}
.shop>image{display: block;width:100rpx;height: 100rpx;border-radius: 10rpx;overflow: hidden;float: left;}
.s_info{float: left;width: 390rpx;box-sizing: border-box;padding: 0 30rpx;font-size: 28rpx;line-height: 50rpx;}
.s_info text{color: #999;}
.btns{float: left;width: 200rpx;padding-top: 24rpx;}
.btns image{display: block;width: 35rpx;height: 35rpx;margin:4px 15rpx;}
.btns .nums{width: 50rpx;height: 50rpx;text-align: center;line-height: 50rpx;border: 1px solid #eee;}

.message{background: #fff;color: #999;padding: 30rpx;margin-top: 30rpx;line-height: 50rpx;}
.message text{display: block;}

.foot{background: #fff;width: 100%;height: 100rpx;line-height: 100rpx;box-sizing: border-box;padding-left: 30rpx;font-size: 28rpx;color: #FBBA22;position: fixed;left: 0;bottom: 0;z-index: 99;}
.foot image{width: 40rpx;height:40rpx;margin-right: 10rpx;vertical-align: middle;}
.foot .foot_btn{position: absolute;right: 0;top: 0;height: 100rpx;line-height: 100rpx;width: 280rpx;text-align: center;font-size: 28rpx;color: #fff;background: #FBBA22}

