/* page/my/address/address.wxss */

page{background: #f5f5f5;}

.box{margin-top: 20rpx;background: #fff;}
.box .item{padding: 20rpx 20rpx;font-size: 28rpx;}
.box .item .tit{line-height: 50rpx;height: 50rpx;width: 150rpx;}
.box .item input{height: 50rpx;line-height: 50rpx;min-height: 50rpx;padding-right: 20rpx;text-align: right;width: auto;}
.box .item textarea{width: 100%;height: 150rpx;}
.picker{text-align: right;padding-right: 50rpx;position: relative;height: 50rpx;line-height: 50rpx;}
.picker:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}


 /**底部按钮*/
.add_address{position:absolute;left:0;bottom:0;width:100%; background: #536FF2; height: 45px; line-height: 45px; color:#fff; text-align: center}

