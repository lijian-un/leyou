/* page/news/news.wxss */

.list{background: #fff;box-sizing: border-box;padding: 30rpx;}
.item{width: 100%;border-radius: 10rpx;overflow: hidden;box-shadow: 0 0 5px 2px #f5f5f5;margin-bottom: 30rpx;}
.item>image{display: block;width: 100%;height:320rpx;}
.item .i_info{width: 100%;height: 100%;background: #fff;box-sizing: border-box;padding: 25rpx;}
.item .i_info .i_tit{font-size: 32rpx;line-height: 50rpx;}
.item .i_info .i_message{font-size: 24rpx;color: #999;line-height: 40rpx;margin-top: 20rpx;}
.item .i_info .i_foot{width: 100%;box-sizing: border-box;padding-right: 200rpx;position: relative;margin-top: 20rpx}

.item .i_info .i_foot text{float: left;padding: 3rpx 15rpx;border-radius: 40rpx;font-size: 24rpx;color: #fff;background: #536FF2;margin-right: 10rpx;}
.item .i_info .i_foot .i_btn{position: absolute;right: 0;bottom: 0;color: #999}
.item .i_info .i_foot .i_btn image{width: 30rpx;height: 30rpx;margin: 0 10rpx 0 30rpx;}



