/**app.wxss**/
@import "weui/weui.wxss";
page{background-color:#fff;font-size:28rpx;}

.clear:after {content:""; display:block; height:0; clear:both; visibility:hidden;}
.ellipsis-1 {overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.ellipsis-2 {display: -webkit-box;overflow: hidden;text-overflow: ellipsis;word-wrap: break-word;white-space: normal !important;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.loadHeight{width:100%;}
button::after{border:0px solid rgba(0,0,0,0) ;}
.clear:after {content:""; display:block; height:0; clear:both; visibility:hidden;}

.bg_10{height: 10rpx;width: 100%;background: #f2f2f2;}

/*加载更多*/
.more{color:#707070;text-align: center;font-size:14px;padding:10px;line-height: 20px;position:relative}
.more image{width:20px;height:20px;position:absolute;left:230rpx; animation:rotate 2s linear infinite;}
.shmore{padding-top:200rpx;}
@keyframes rotate
{
from {transform:rotate(0deg);}
to {transform:rotate(360deg);}
}

image{height: initial;}

/* 技术支持 */
.footer{text-align:center;font-size:12px;padding:20px 10rpx 10px;position:fixed;left:0;bottom:0;width:100%;z-index:-1;}
.height{height:60px;width:120px;margin:0 auto;}
.height.tech_click{background-color:rgba(0,0,0,0.05);}
.tech_click{background-color:rgba(0, 0, 0, 0)!important;}
.tech_click image{background-color:rgba(0,0,0,0.05);}
.footer image{height:30px;width:100px;display:block;margin:0rpx auto 0rpx;}

