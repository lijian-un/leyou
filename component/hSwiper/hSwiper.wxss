/*滑动样式*/
.hSwiper{
	height: 360rpx;
	overflow: hidden;
	position: relative;
}
.hSwiper_bg{width: 100%;height: 40%;position: absolute;left: 0;top: 0;background: #536FF2;}
.hSwiperCon{
	height: 100%;
	will-change: transform;
	position: absolute;
}
.item{
	width: 100%;
	height: 100%;
	position:relative;
	float: left;
	box-sizing:border-box;
}